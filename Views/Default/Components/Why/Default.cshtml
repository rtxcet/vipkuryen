@model IEnumerable<vipkuryen.Models.Why>

<section class="features">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="display-6 fw-bold mb-4 text-center mb-5">
                    Neden @ViewData["SiteTitle"]?
                </h2>

                @foreach (var item in Model)
                {
                    <div class="feature-item mb-3">
                        <div class="feature-icon">
                            <i class="@item.Ikon"></i>
                        </div>
                        <div>
                            <h5>@item.Title</h5>
                            <p class="text-muted mb-0">@item.Description</p>
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-6">
                <div class="text-center">
                    <div style="width: 100%; height: 400px; background: var(--gradient); border-radius: 15px; display: flex; align-items: center; justify-content: center; color: white; font-size: 1.5rem;">
                        <div>
                            <i class="fas fa-shipping-fast fa-4x mb-3"></i>
                            <div>Hızlı Teslimat</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
