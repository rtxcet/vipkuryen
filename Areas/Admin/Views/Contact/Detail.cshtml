@model Contact

<div class="container">
    <div class="col-lg-12 col-xl-12 shadow my-4">
        @if (ViewBag.Message != null)
        {
            <div id="successMessage" class="alert alert-success alert-dismissible fade show shadow-sm fw-semibold" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @ViewBag.Message
            </div>
        }
    </div>

    <div class="card shadow border-0 my-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Mesaj Detayı</h5>
        </div>
        <div class="card-body">
            <p><strong>Adı Soyadı:</strong> @Model.Title</p>
            <p><strong>Telefon:</strong> @Model.Phone</p>
            <p><strong>Mesaj:</strong> @Model.Description</p>
        </div>
        <div class="card-footer text-end">
            <a href="/Admin/Contact/Index" class="btn btn-secondary">Geri Dön</a>
        </div>
    </div>
</div>