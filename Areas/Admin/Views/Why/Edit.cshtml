@model vipkuryen.Models.Why

<div class="container">
    <div class="col-lg-12 col-xl-12 shadow my-4 ">
        <div class="card-header bg-warning text-dark py-3 d-flex justify-content-between align-items-center mb-2 ">
            <h6>Neden Düzenle</h6>
        </div>
        <div class="card border-0 px-2">
            <form method="post">

                <input type="hidden" asp-for="Id" />

                <!-- Ikon -->
                <div class="mb-3">
                    <label asp-for="Ikon" class="form-label fw-semibold"></label>
                    <input asp-for="Ikon" class="form-control" />
                    <span asp-validation-for="Ikon" class="text-danger"></span>
                </div>

                <!-- Title -->
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold">İsim</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold">Açıklama</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Kaydet ve Geri Butonları -->
                <div class="d-grid gap-2 d-md-flex justify-content-md-end my-4">
                    <button type="submit" class="btn btn-warning btn-lg px-4">
                        <i class="fas fa-save me-2"></i>Güncelle
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Geri</a>
                </div>
            </form>
        </div>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
    </div>
</div>
